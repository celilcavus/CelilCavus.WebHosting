@model AboutUs

@using (Html.BeginForm("Update", "AboutUs", FormMethod.Post))
{
    @Html.Label("Header")
    @Html.TextBoxFor(x=>x.Header,new{@class="form-control"})
    <br>

    @Html.Label("Image")
    @Html.TextBoxFor(x=>x.Image,new{@type="File",@class="mt-1"})

    <br>
    @Html.Label("Description")
    @Html.TextAreaFor(x=>x.Description,new{@class="form-control w-100 h-50"})
    <br>
    <button type="submit" class="btn btn-outline-dark">Update</button>
}



